   <nav class="navbar navbar-default">
  <div class="container-fluid">
   
    <div class="navbar-header">
      <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1">
        <span class="sr-only">Toggle navigation</span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
      
    <%= link_to 'Inicio', root_path, class: "navbar-brand"%>
    </div>

   
    <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
      <ul class="nav navbar-nav">
        
        <li class="dropdown">
          <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false">Nuestra Institución <span class="caret"></span></a>
          <ul class="dropdown-menu" role="menu">
            <li><%= link_to 'Mision y Vision', home_mision_vision_path%></li>
            <li><%= link_to 'Galeria', home_galeria_path%></li>
            <li><%= link_to 'Manual de Convivencia', home_manual_path%></li>
            <li><%= link_to 'Contactenos', home_contactenos_path%></li>
          </ul>
        </li>
        <% if acudiente_signed_in? %>
          <li><%= link_to 'Estudiantes', estudiantes_path%></li>
        <% end %>
      </ul>

      <% if acudiente_signed_in? %>
      <% nombre = "#{current_acudiente.nombre} #{current_acudiente.apellidos}" %>
      <form id="signin" class="navbar-form navbar-right" role="form">
        <span class=""><%= link_to nombre, edit_acudiente_registration_path %> </span>
        <span> | </span>
        <span class=""><%= link_to 'Cerrar Sesion', destroy_acudiente_session_path, method: :delete %></span>   
     </form>
      
    <% else %> 
    <% @acudiente = Acudiente.new %>     
    <%= form_for(@acudiente, as: @acudiente, url: session_path(@acudiente), :html => {:class => "navbar-form navbar-right"}) do |f| %>
      <div class="input-group">
        <span class="input-group-addon"><i class="glyphicon glyphicon-user"></i></span>  
        <%= f.email_field :email, autofocus: true, class: "form-control", placeholder:"Email" %>
      </div>

      <div class="input-group">
        <span class="input-group-addon"><i class="glyphicon glyphicon-lock"></i></span>
        <%= f.password_field :password, autocomplete: "off", class: "form-control", placeholder: "Contraseña" %>
      </div>

      

      <div class="input-group">
        <%= f.submit "Log in", :class => 'btn btn-primary' %>
      </div>
    <% end %>
